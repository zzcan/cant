{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rimraf node_modules",
    "lint:ts": "prettier --parser=typescript --write \"packages/(can-)*/**/*.ts?(x)\"",
    "lint:else": "prettier --write \"packages/(can-)*/**/*.{js,jsx,md,json}\"",
    "lint": "npm run lint:ts & npm run lint:else"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/(can-)*/**/*.{less,css}": [
      "stylelint --fix"
    ],
    "packages/(can-)*/**/*.{js,jsx,md,json}": [
      "prettier --write"
    ],
    "packages/(can-)*/**/*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "resolutions": {
    "@types/react": "^16.14.0"
  },
  "devDependencies": {
    "father-build": "^1.19.1",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0"
  }
}
